<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="21dp"
        android:textColor="#EE6AA7"
        android:text="从网络更新中" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/progress_imageview1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="5px"
            android:background="#00000000"
            android:src="@drawable/progress_image2" />

        <ImageView
            android:id="@+id/progress_imageview2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginRight="5px"
            android:background="#00000000"
            android:src="@drawable/progress_image1" />

        <ImageView
            android:id="@+id/progress_imageview3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginRight="5px"
            android:background="#00000000"
            android:src="@drawable/progress_image1" />

        <ImageView
            android:id="@+id/progress_imageview4"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginRight="5px"
            android:background="#00000000"
            android:src="@drawable/progress_image1" />

        <ImageView
            android:id="@+id/progress_imageview5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="5px"
            android:background="#00000000"
            android:src="@drawable/progress_image1" />
    </LinearLayout>

</LinearLayout>